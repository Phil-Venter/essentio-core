{
    "name": "essentio/core",
    "description": "A minimalist PHP micro-framework for people who prefer simple structure and full controlâ€”without the bloat, dogma, or dependency hell.",
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Essentio\\Core\\": "src/"
        },
        "files": [
            "src/functions.php",
            "src/Extra/functions.php"
        ]
    },
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "nette/php-generator": "^4.1",
        "nikic/php-parser": "^5.4",
        "pestphp/pest": "^3.8",
        "rector/rector": "^2.0"
    },
    "minimum-stability": "stable",
    "scripts": {
        "runner": "composer run format && composer run test && composer run build-all 'all.php' && composer run build-base 'base.php'",
        "format": "./vendor/bin/rector",
        "test": "./vendor/bin/pest",
        "build": "php scripts/build.php",
        "build-all": "php scripts/build.php all",
        "build-base": "php scripts/build.php base"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
